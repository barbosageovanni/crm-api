generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id          Int          @id @default(autoincrement())
  nome        String
  cnpjCpf     String
  tipo        String
  ativo       Boolean      @default(true)
  transportes Transporte[]
}

model Transporte {
  id                   Int       @id @default(autoincrement())
  clienteId            Int
  cliente              Cliente   @relation(fields: [clienteId], references: [id])
  numeroCteOc          String
  dataOperacao         DateTime
  valorTotal           Float
  dataEnvioFaturamento DateTime?
  dataVencimento       DateTime?
  dataAtesto           DateTime?
  dataNotaFiscal       DateTime?
  descricaoNotaFiscal  String?
  atestos              Atesto[]
  faturas              Fatura[]
}

model Atesto {
  id           Int        @id @default(autoincrement())
  transporteId Int
  transporte   Transporte @relation(fields: [transporteId], references: [id])
  dataAtesto   DateTime
  tipo         String
  usuarioId    Int?
  usuario      Usuario?   @relation(fields: [usuarioId], references: [id])
}

model Fatura {
  id           Int        @id @default(autoincrement())
  transporteId Int
  transporte   Transporte @relation(fields: [transporteId], references: [id])
  numeroFatura String
  valor        Float
  dataEmissao  DateTime
  status       String
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senhaHash String
  papel     String
  ativo     Boolean  @default(true)
  atestos   Atesto[]
}

model Despesa {
  id            Int      @id @default(autoincrement())
  categoria     String
  valor         Float
  data          DateTime
  descricao     String?
  centroCustoId Int?
}
