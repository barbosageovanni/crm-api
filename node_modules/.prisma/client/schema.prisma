generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUMS para melhor integridade e type safety
enum TipoCliente {
  PF
  PJ
}

enum StatusFatura {
  PENDENTE
  PAGA
  VENCIDA
  CANCELADA
}

enum PapelUsuario {
  ADMIN
  USUARIO
  GERENTE
}

enum TipoAtesto {
  ENTREGA_OK
  AVARIA
  DEVOLUCAO
  OUTRO
}

enum CategoriaDespesa {
  TRANSPORTE
  ALIMENTACAO
  MATERIAL_ESCRITORIO
  MANUTENCAO
  OUTRA
}

// MODELOS
model Cliente {
  id        Int         @id @default(autoincrement())
  nome      String      @db.VarChar(100)
  cnpjCpf   String?     @unique @db.VarChar(14)
  tipo      TipoCliente
  email     String?     @unique @db.VarChar(255)
  telefone  String?     @db.VarChar(20)
  endereco  String?     @db.Text
  ativo     Boolean     @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  transportes Transporte[]

  @@index([nome])
  @@index([cnpjCpf])
  @@index([tipo])
  @@map("clientes")
}

model Transporte {
  id                   Int       @id @default(autoincrement())
  clienteId            Int
  cliente              Cliente   @relation(fields: [clienteId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  numeroCteOc          String    @db.VarChar(100)
  dataOperacao         DateTime
  valorTotal           Decimal   @db.Decimal(12, 2)
  dataEnvioFaturamento DateTime?
  dataVencimento       DateTime?
  dataAtesto           DateTime?
  dataNotaFiscal       DateTime?
  descricaoNotaFiscal  String?   @db.Text
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  atestos Atesto[]
  faturas Fatura[]

  @@index([clienteId])
  @@index([dataOperacao])
  @@map("transportes")
}

model Atesto {
  id           Int        @id @default(autoincrement())
  transporteId Int
  transporte   Transporte @relation(fields: [transporteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  dataAtesto   DateTime
  tipo         TipoAtesto
  observacao   String?    @db.Text
  usuarioId    Int?
  usuario      Usuario?   @relation(fields: [usuarioId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([transporteId])
  @@index([usuarioId])
  @@map("atestos")
}

model Fatura {
  id             Int          @id @default(autoincrement())
  transporteId   Int
  transporte     Transporte   @relation(fields: [transporteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  numeroFatura   String       @unique @db.VarChar(50)
  valor          Decimal      @db.Decimal(12, 2)
  dataEmissao    DateTime
  dataVencimento DateTime
  status         StatusFatura
  linkBoleto     String?      @db.Text
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([transporteId])
  @@index([status])
  @@map("faturas")
}

model Usuario {
  id        Int          @id @default(autoincrement())
  nome      String       @db.VarChar(100)
  email     String       @unique @db.VarChar(255)
  senhaHash String       @db.VarChar(255)
  papel     PapelUsuario
  ativo     Boolean      @default(true)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  atestos Atesto[]

  @@map("usuarios")
}

model Despesa {
  id            Int              @id @default(autoincrement())
  categoria     CategoriaDespesa
  valor         Decimal          @db.Decimal(10, 2)
  data          DateTime
  descricao     String?          @db.Text
  centroCustoId Int?
  centroCusto   CentroCusto?     @relation(fields: [centroCustoId], references: [id], onDelete: SetNull)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([data])
  @@index([categoria])
  @@index([centroCustoId])
  @@map("despesas")
}

model CentroCusto {
  id        Int      @id @default(autoincrement())
  nome      String   @unique @db.VarChar(100)
  descricao String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  despesas Despesa[]

  @@map("centros_custo")
}
